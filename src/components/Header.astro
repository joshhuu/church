---
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
       <div class="flex-shrink-0">
        <a href="/" class="flex items-center hover:opacity-80 transition-opacity duration-200">
          <img 
            src="/images/nlhog_logo.png" 
            alt="New Life House of Glory" 
            class="h-16 w-auto"
          />
          <div class="ml-3 hidden sm:block">
            <h1 class="text-xl font-bold text-gray-900">New Life House of Glory</h1>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/" class={`${currentPath === '/' ? 'text-primary-900 font-semibold' : 'text-gray-700 hover:text-primary-700'} px-3 py-2 text-sm font-medium transition-colors duration-200`}>
            Home
          </a>
          <a href="/about" class={`${currentPath === '/about' ? 'text-primary-900 font-semibold' : 'text-gray-700 hover:text-primary-700'} px-3 py-2 text-sm font-medium transition-colors duration-200`}>
            About
          </a>
          <a href="/contact" class={`${currentPath === '/contact' ? 'text-primary-900 font-semibold' : 'text-gray-700 hover:text-primary-700'} px-3 py-2 text-sm font-medium transition-colors duration-200`}>
            Contact
          </a>
          <a href="/location" class={`${currentPath === '/location' ? 'text-primary-900 font-semibold' : 'text-gray-700 hover:text-primary-700'} px-3 py-2 text-sm font-medium transition-colors duration-200`}>
            Location
          </a>
          <a href="/support" class={`${currentPath === '/support' ? 'text-primary-900 font-semibold' : 'text-gray-700 hover:text-primary-700'} px-3 py-2 text-sm font-medium transition-colors duration-200`}>
            Support This Ministry
          </a>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="https://www.youtube.com/@newlifehouseofglory" target="_blank" rel="noopener noreferrer"
         class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-4 py-2 rounded-lg text-sm font-medium hover:from-primary-700 hover:to-primary-800 transition-all duration-200 transform hover:scale-105 shadow-md hover:shadow-lg">
          Youtube
        </a>
      </div> 

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" type="button" class="bg-gray-50 inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-primary-700 hover:bg-gray-100 transition-colors duration-200" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-100">
        <a href="/" class={`${currentPath === '/' ? 'text-primary-900 bg-primary-50' : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'} block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200`}>Home</a>
        <a href="/about" class={`${currentPath === '/about' ? 'text-primary-900 bg-primary-50' : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'} block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200`}>About</a>
        <a href="/watch" class={`${currentPath === '/watch' ? 'text-primary-900 bg-primary-50' : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'} block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200`}>Watch</a>
        <a href="/prayer" class={`${currentPath === '/prayer' ? 'text-primary-900 bg-primary-50' : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'} block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200`}>Prayer</a>
        <a href="/support" class={`${currentPath === '/support' ? 'text-primary-900 bg-primary-50' : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'} block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200`}>Support</a>
        <a href="/contact" class={`${currentPath === '/contact' ? 'text-primary-900 bg-primary-50' : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'} block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200`}>Contact</a>
        <a href="/location" class={`${currentPath === '/location' ? 'text-primary-900 bg-primary-50' : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'} block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200`}>Location</a>
        <div class="pt-2">
          <a href="/watch" class="bg-gradient-to-r from-primary-600 to-primary-700 text-white block px-3 py-2 rounded-md text-base font-medium hover:from-primary-700 hover:to-primary-800 transition-all duration-200 text-center">
            Join Us Live
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>