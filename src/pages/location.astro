---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Visit Us"
  description="Find New Life House of Glory and plan your visit. Get directions, service times, and everything you need to know about visiting our church."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="bg-gradient-to-r from-primary-700 to-primary-800 text-white py-20"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Visit Us</h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto">
        We can't wait to welcome you to our church family!
      </p>
    </div>
  </section>

  <!-- Map and Address -->
    <!-- Map and Address -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <!-- Map -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">
            Find Us
          </h2>
          <div class="bg-gray-200 rounded-xl overflow-hidden shadow-lg h-96 relative">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3915.0301350207733!2d76.9213489386465!3d11.11113199503792!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMTHCsDA2JzQwLjEiTiA3NsKwNTUnMjMuMSJF!5e0!3m2!1sen!2sin!4v1752050053284!5m2!1sen!2sin"
              width="100%"
              height="100%"
              style="border:0; border-radius: 12px;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="New Life House of Glory Location"
            ></iframe>
            
            <!-- Overlay button for directions -->
            <div class="absolute bottom-4 right-4">
              <a
                href="https://maps.app.goo.gl/EavTeXByiue9WMuP6"
                target="_blank"
                class="bg-white text-primary-600 px-4 py-2 rounded-lg shadow-md font-semibold hover:bg-primary-50 hover:text-primary-800 transition-all duration-200 inline-flex items-center"
              >
                <svg
                  class="w-4 h-4 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  ></path>
                </svg>
                Get Directions
              </a>
            </div>
          </div>
          
          <!-- Address Information below the map -->
          <div class="mt-8 bg-gray-50 rounded-xl p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Sunday Worship Location</h3>
                <div class="space-y-2 text-gray-600">
                  <p class="flex items-start">
                    <svg class="w-5 h-5 text-primary-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>Narasimhanaicken Palayam<br>Coimbatore-641031</span>
                  </p>
                  <p class="flex items-center">
                    <svg class="w-5 h-5 text-primary-600 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Sundays: 10:00 AM - 12:00 PM</span>
                  </p>
                </div>
              </div>
              
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Bible Study Location</h3>
                <div class="space-y-2 text-gray-600">
                  <p class="flex items-start">
                    <svg class="w-5 h-5 text-gold-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>Veerapandi pirivu<br>Coimbatore-641019</span>
                  </p>
                  <p class="flex items-center">
                    <svg class="w-5 h-5 text-gold-600 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Sundays: 5:00 PM - 7:00 PM</span>
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Contact Information -->
            <div class="mt-6 pt-6 border-t border-gray-200">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <span class="text-gray-700">+91 9486450054</span>
                </div>
                <div class="flex gap-3">
                  <a
                    href="https://maps.app.goo.gl/vLgd5Yp8KxuvQH5M7"
                    target="_blank"
                    class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-700 transition-colors duration-200 inline-flex items-center"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    Open in Maps
                  </a>
                  <a
                    href="/contact"
                    class="bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-gray-700 transition-colors duration-200 inline-flex items-center"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                    Contact Us
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Times -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          Service Times
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Join us for worship, fellowship, and biblical teaching. All are
          welcome!
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Sunday Worship -->
        <div class="bg-white rounded-xl p-8 shadow-lg text-center">
          <div
            class="w-16 h-16 bg-primary-600 text-white rounded-full flex items-center justify-center mx-auto mb-6 text-2xl font-bold"
          >
            SUN
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Sunday Worship</h3>
          <div class="space-y-2 text-gray-600 mb-6">
            <p class="text-lg font-semibold text-primary-600">
              10:00 AM - 12:00 PM
            </p>
            <p>Narasimhanaicken Palayam</p>
            <p>Coimbatore-641031</p>
          </div>
        </div>

        <!-- Wednesday Bible Study -->
        <div class="bg-white rounded-xl p-8 shadow-lg text-center">
          <div
            class="w-16 h-16 bg-gold-500 text-white rounded-full flex items-center justify-center mx-auto mb-6 text-2xl font-bold"
          >
            WED
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Bible Study</h3>
          <div class="space-y-2 text-gray-600 mb-6">
            <p class="text-lg font-semibold text-gold-600">7:00 PM - 8:30 PM</p>
            <p>Veerapandi pirivu</p>
            <p>Coimbatore-641019</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact for Visit -->
  <section class="py-20 bg-primary-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Planning Your Visit?</h2>
      <p class="text-xl text-blue-100 mb-8">We'd love to know you're coming!</p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="bg-white text-primary-900 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-all duration-300 transform hover:scale-105"
        >
          Let Us Know You're Coming
        </a>
        <a
          href="tel:555-123-4567"
          class="border-2 border-white text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-white hover:text-primary-900 transition-all duration-300 transform hover:scale-105"
        >
          Call Us: +91 9486450054
        </a>
      </div>

      <div class="mt-12 pt-8 border-t border-blue-800">
        <h3 class="text-xl font-semibold mb-4">Have Questions?</h3>
        <p class="text-blue-100 mb-6">
          Don't hesitate to reach out if you have any questions about visiting,
          our beliefs, or how to get involved.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center text-blue-200 hover:text-white transition-colors duration-200"
        >
          Contact Us
          <svg
            class="w-4 h-4 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
