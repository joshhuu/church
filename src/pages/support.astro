---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Support This Ministry"
  description="Partner with New Life House of Glory through financial support. Help us spread the gospel worldwide through your generous giving."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="bg-gradient-to-r from-primary-700 to-primary-800 text-white py-20"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Support This Ministry</h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto">
        Your generous support helps us reach the world with the gospel of Jesus
        Christ.
      </p>
    </div>
  </section>

  <!-- Giving Options -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-center">
        <!-- Online Giving -->
        <div
          class="bg-gradient-to-br from-primary-50 to-blue-50 rounded-xl p-8"
        >
          <div class="text-center mb-8">
            <div
              class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-primary-900 mb-4">
              Digital Giving
            </h3>
            <p class="text-primary-700 mb-6">
              Support this ministry using UPI, bank transfer, or scan our QR
              code for quick donations.
            </p>
          </div>

          <!-- Digital Payment Options -->
          <div class="bg-white rounded-lg p-6 shadow-lg space-y-6">
            <!-- QR Code Section -->
            <div class="text-center">
              <h4 class="text-lg font-semibold text-gray-900 mb-4">
                Scan to Give
              </h4>
              <div class="bg-gray-50 p-6 rounded-lg inline-block">
                <div
                  class="w-48 h-48 bg-white border-2 border-gray-200 rounded-lg flex items-center justify-center mx-auto mb-4"
                >
                  <img
                    src="/images/qr.png"
                    alt="UPI Payment QR Code"
                    class="w-44 h-44 object-contain"
                  />
                </div>
                <p class="text-sm text-gray-600 mb-2">Scan with any UPI app</p>
                <p class="text-xs text-gray-500 font-mono">
                  UPI ID: joshuasuresh08@oksbi
                </p>
              </div>
            </div>

            <!-- UPI ID Section -->
            <div class="border-t pt-6">
              <h4 class="text-lg font-semibold text-gray-900 mb-4">
                UPI Payment
              </h4>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm text-gray-600 mb-1">UPI ID</p>
                    <p class="text-lg font-mono text-gray-900">
                      joshuasuresh08@oksbi
                    </p>
                  </div>
                  <button
                    onclick="copyUPI()"
                    class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors duration-200"
                  >
                    Copy
                  </button>
                </div>
              </div>
            </div>

            <!-- Bank Transfer Section -->
            <div class="border-t pt-6">
              <h4 class="text-lg font-semibold text-gray-900 mb-4">
                Bank Transfer
              </h4>
              <div class="bg-gray-50 p-4 rounded-lg space-y-3">
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <p class="text-sm text-gray-600">Account Name</p>
                    <p class="font-medium text-gray-900">
                      New Life House of Glory
                    </p>
                  </div>
                  <div>
                    <p class="text-sm text-gray-600">Account Number</p>
                    <p class="font-mono text-gray-900">42307271290</p>
                  </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <p class="text-sm text-gray-600">IFSC Code</p>
                    <p class="font-mono text-gray-900">SBIN0008155</p>
                  </div>
                  <div>
                    <p class="text-sm text-gray-600">Bank Name</p>
                    <p class="font-medium text-gray-900">State Bank of India</p>
                  </div>
                </div>
                <button
                  onclick="copyBankDetails()"
                  class="w-full bg-primary-600 text-white py-2 rounded-lg hover:bg-primary-700 transition-colors duration-200"
                >
                  Copy Bank Details
                </button>
              </div>
            </div>

            <!-- WhatsApp Confirmation -->
            <div class="border-t pt-6">
              <div class="bg-green-50 p-4 rounded-lg">
                <div class="flex items-center mb-3">
                  <svg
                    class="w-5 h-5 text-green-600 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
