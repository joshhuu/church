---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Prayer Requests"
  description="Submit your prayer requests confidentially to New Life House of Glory. Our prayer team is committed to lifting you up in prayer."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="bg-gradient-to-r from-primary-700 to-primary-800 text-white py-20"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Prayer Requests</h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto">
        We believe in the power of prayer. Share your prayer needs with us, and
        let our community lift you up before the throne of grace.
      </p>
    </div>
  </section>

  <!-- Prayer Request Form -->
  <section class="py-20 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          Submit Your Prayer Request
        </h2>
      </div>
      <div class="bg-gray-50 rounded-xl p-8 shadow-lg">
        <form id="prayer-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="first-name"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                First Name
              </label>
              <input
                type="text"
                id="first-name"
                name="firstName"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
                placeholder="Your first name"
              />
            </div>
            <div>
              <label
                for="last-name"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Last Name <span class="text-gray-400">(Optional)</span>
              </label>
              <input
                type="text"
                id="last-name"
                name="lastName"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
                placeholder="Your last name"
              />
            </div>
          </div>
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Email Address <span class="text-gray-400">(Optional)</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
              placeholder="your.email@example.com"
            />
          </div>

          <div>
            <label
              for="prayer-request"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Prayer Request <span class="text-red-500">*</span>
            </label>
            <textarea
              id="prayer-request"
              name="prayerRequest"
              rows="6"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200 resize-none"
              placeholder="Please share your prayer request here. We're happy to pray for you..."
            ></textarea>
          </div>

          <div class="text-center">
            <button
              type="submit"
              class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:from-primary-700 hover:to-primary-800 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
            >
              Submit Prayer Request
            </button>
          </div>
        </form>

        <!-- Success Message (Hidden by default) - Moved outside form -->
        <div
          id="success-message"
          class="hidden bg-green-50 border border-green-200 rounded-lg p-6 text-center mt-6"
        >
          <svg
            class="w-12 h-12 text-green-600 mx-auto mb-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-lg font-semibold text-green-800 mb-2">
            Prayer Request Submitted
          </h3>
          <p class="text-green-700">
            Thank you for sharing your prayer request with us. Our prayer team
            will begin praying for you immediately. May God's peace and comfort
            be with you.
          </p>
        </div>
      </div>
    </div>

    <!-- Prayer Ministry Info -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Our Prayer Ministry
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Prayer is the foundation of everything we do at New Life House of
            Glory. Learn more about how we pray and how you can join us.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl p-8 shadow-lg text-center">
            <div
              class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              Prayer Team
            </h3>
            <p class="text-gray-600">
              Our dedicated prayer warriors meet weekly to pray over every
              request submitted. Your prayer needs are in faithful hands.
            </p>
          </div>

          <div class="bg-white rounded-xl p-8 shadow-lg text-center">
            <div
              class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              24/7 Prayer
            </h3>
            <p class="text-gray-600">
              We believe prayer should be constant. Our church family commits to
              ongoing prayer for all submitted requests.
            </p>
          </div>

          <div class="bg-white rounded-xl p-8 shadow-lg text-center">
            <div
              class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              Answered Prayers
            </h3>
            <p class="text-gray-600">
              We love hearing how God answers prayers! Share your testimonies
              with us to encourage others in their faith journey.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Prayer Meeting Info -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          Join Our Prayer Meeting
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Experience the power of corporate prayer. Join us every Friday evening
          for our community prayer gathering.
        </p>

        <div
          class="bg-gradient-to-br from-primary-50 to-blue-50 rounded-xl p-8 mb-8"
        >
          <h3 class="text-2xl font-bold text-primary-900 mb-4">
            Friday Night Prayer
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left">
            <div>
              <div class="flex items-center text-primary-800 mb-2">
                <svg
                  class="w-5 h-5 mr-3"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Every Friday at 7:00 PM</span>
              </div>
              <div class="flex items-center text-primary-800">
                <svg
                  class="w-5 h-5 mr-3"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>Church Prayer Room</span>
              </div>
            </div>
            <div>
              <div class="flex items-center text-primary-800 mb-2">
                <svg
                  class="w-5 h-5 mr-3"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  ></path>
                </svg>
                <span>All ages welcome</span>
              </div>
              <div class="flex items-center text-primary-800">
                <svg
                  class="w-5 h-5 mr-3"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  ></path>
                </svg>
                <span>Casual, welcoming atmosphere</span>
              </div>
            </div>
          </div>
        </div>

        <a
          href="/contact"
          class="inline-flex items-center bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors duration-200"
        >
          Learn More
          <svg
            class="w-4 h-4 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </section>

    <Footer />
  </section>

    <script>
      document
        .getElementById("prayer-form")
        .addEventListener("submit", function (e) {
          e.preventDefault();

          // Hide form and show success message
          document.getElementById("prayer-form").style.display = "none";
          document.getElementById("success-message").classList.remove("hidden");

          // Scroll to success message
          document.getElementById("success-message").scrollIntoView({
            behavior: "smooth",
            block: "center",
          });
        });
    </script>
    </Layout>
  </section>
</Layout>
